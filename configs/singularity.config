singularity.enabled = true
singularity.autoMounts = true

// InterProScan data directory configuration
// Set this parameter when running: --interproscan_data /path/to/interproscan/data
params.interproscan_data = null

process {
    withName: 'INTERPROSCAN.*' {
        containerOptions = { params.interproscan_data ? "-B ${params.interproscan_data}:/opt/interproscan/data" : '' }
    }
}
